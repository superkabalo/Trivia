<Page x:Class="User.PersonalStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:User"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalStatistics">

    <Grid Background="#1b1448">
        <Grid.RowDefinitions>
            <!-- General grid row structure -->
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.075*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.075*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="#120D30">
            <!-- Grid of the top of the page-->
            <Grid.ColumnDefinitions>
                <!-- Column for the return button -->
                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Return button -->
            <Button BorderThickness="0"
                    Content="Return"
                    Click="ReturnBtn_Click"
                    Foreground="White"
                    FontFamily="Montserrat"
                    Cursor="Hand">
                <!-- Set button colors -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#28AEED" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#278BEF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <!-- Make button rounded -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Margin="7, 7, 7, 7"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- PersonalStatistics page title -->
            <TextBlock Text="PERSONAL STATISTICS"
                       FontFamily="Montserrat"
                       Foreground="DarkGray"
                       Grid.ColumnSpan="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       FontWeight="Bold" />
        </Grid>
        <!-- Grid for showcasing the user stats -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="1.75*"></ColumnDefinition>
                <!-- Middle columns for placing the names of the stats and the stats -->
                <ColumnDefinition Width="1.25*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Text block for each statistic name and its value which will be set through the backend code -->
            <TextBlock Text="Username"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock x:Name="txtUsername"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Total Answers"
                        Foreground="DarkGray"
                        FontFamily="Montserrat"
                        FontWeight="Medium"
                        FontSize="26"
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />

            <TextBlock x:Name="txtTotalAnswers"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="2"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Correct Answers"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="1"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock x:Name="txtCorrectAnswers"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="2"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Score"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="1"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock x:Name="txtScore"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="2"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Average Answer Time"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="1"
                       Grid.Row="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock x:Name="txtAvgAnsTime"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="2"
                       Grid.Row="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Total Games"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="1"
                       Grid.Row="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock x:Name="txtTotalGames"
                       Foreground="DarkGray"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       FontSize="26"
                       Grid.Column="2"
                       Grid.Row="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</Page>